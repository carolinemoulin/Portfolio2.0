{% extends 'base.html.twig' %}

{% block title %}Création de compte{% endblock %}

{% block body %}

    <section class="ftco-section about-section">
        <div class="container">
            <div class="row d-flex" data-scrollax-parent="true">
                <div class="col-md-8 wrap ftco-animate">
                    <div class="about-desc">

                        <div class="p-5">
                            <h2 class="mb-5">Création de compte</h2>
                            {{ form_start(form) }}
                            <div class="control-group">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    {{ form_row(form.username, {'label':'Identifiant','attr':{'placeholder': 'Identifiant'}}) }}
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>

                            <div class="control-group">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    {{ form_row(form.password, {'label':'Mot de passe','attr': {'placeholder': 'Mot de passe'}}) }}
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    {{ form_row(form.confirm_password,{'label':'Confirmation du mot de passe','attr':{'placeholder': ' Confirmation MdP'}}) }}
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>

                            <br>
                            <div id="success"></div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-xl">Inscription</button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}